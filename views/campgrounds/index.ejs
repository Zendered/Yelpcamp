<% layout("layouts/boilerplate") %> 
<div id="cluster-map"></div>
<div class="container">
    <h1>Campgrounds</h1>

    <%for(camp of campground){%> 
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if (camp.images.length) {%>
                        <img class="img-fluid" alt="" src="<%=camp.images[0].url%>">
                        <% } else {%> 
                            <img class="img-fluid" alt="" src="https://res.cloudinary.com/dzgnvyi6s/image/upload/v1632918544/YelpCamp/rbuaxmcwaz5dezhpbryc.jpg">
                    <% } %> 
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= camp.title %> </h5>
                        <p class="card-text"><%= camp.description %></p>
                        <p class="card-text">
                            <small class="text-muted"><%= camp.location%></small>
                        </p>
                        <a class="btn btn-primary" href="/campgrounds/<%=camp._id%>">View <%=camp.title%></a>
                    </div>
                </div>
            </div>
        </div>
    <%}%> 
</div>

